<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/header') %>
  <title>Sign In - Blogify</title>
<link rel="stylesheet" href="/Css/signin.css">
</head>

<body class="bg-light text-dark">
  <%- include("./partials/nav") %>

  <div class="form-wrapper">
    <div class="form-card">
      <h2 class="text-center text-primary fw-bold">Welcome Back!</h2>
      <form action="/user/signin" method="POST" autocomplete="off">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fw-medium text-dark">Email Address</label>
          <input type="email" name="email" id="exampleInputEmail1" class="form-control" placeholder="you@example.com" required>
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label fw-medium text-dark">Password</label>
          <input type="password" name="password" id="exampleInputPassword1" class="form-control" placeholder="••••••••" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">Sign In</button>

        <div class="form-footer">
          <small class="text-muted">Don't have an account?
            <a href="/user/signup">Register here</a>
          </small>
        </div>
      </form>
    </div>
  </div>

  <%- include('./partials/script') %>
</body>

</html>
