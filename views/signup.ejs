<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/header') %>
  <title>Sign Up - Lines</title>
<link rel="stylesheet" href="/Css/signup.css">
</head>

<body class="bg-light text-dark">
  <%- include('./partials/nav') %>

  <div class="form-wrapper">
    <div class="form-card">
      <h2 class="fw-bold text-primary text-center">Create Your Lines Account</h2>
      <form action="/user/signup" method="POST" autocomplete="off">
        <div class="mb-3">
          <label for="fullName" class="form-label fw-medium text-dark">Full Name</label>
          <input type="text" name="fullName" id="fullName" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label fw-medium text-dark">Email Address</label>
          <input type="email" name="email" id="exampleInputEmail1" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label fw-medium text-dark">Password</label>
          <input type="password" name="password" id="exampleInputPassword1" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-primary w-100">Sign Up</button>

        <div class="form-footer">
          <small class="text-muted">Already have an account?
            <a href="/user/signin">Sign In</a>
          </small>
        </div>
      </form>
    </div>
  </div>

  <%- include('./partials/script') %>
</body>

</html>
